@model BSIT3L_Movies.Models.MovieViewModel


<!DOCTYPE html>
<html>
<head>
    <title>MOVIES</title>
</head>
<body>
    <div class="container">
        <h1 class="mt-3">Movie Details</h1>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid custom-image">
            </div>
            <div class="col-md-8">
                <p><strong>Movie ID:</strong> @Model.Id</p>
                <p><strong>Movie Name:</strong> @Model.Name</p>
                <p><strong>Rating:</strong> @Model.Rating</p>
                <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <div class="mt-3">
                    <p>Trailer:<p>
                        <iframe width="400" height="200" src="https://www.youtube.com/embed/@Model.ytid" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
</html>